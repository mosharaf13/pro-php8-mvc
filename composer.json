{
    "name": "mosharaf13/whoosh",
    "description": "Whoosh website from pro php mvc book",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0.x-dev"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src",
            "Framework": "framework"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Robi\\Filesystem\\Tests\\": "tests/"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "git@gitlab.com:sigma-solutions/robi/laravel-packages/robi-core.git"
        },
        {
            "type": "vcs",
            "url": "git@gitlab.com:sigma-solutions/robi/laravel-packages/robi-credentials.git"
        }
    ],
    "extra": {
        "laravel": {
            "providers": [
                "Robi\\Filesystem\\RobiFilesystemServiceProvider"
            ]
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "scripts": {
        "serve": "php -S 127.0.0.1:8000 -t public",
        "sniffer": "phpcs --standard=PSR12 src",
        "beautify": "phpcbf --standard=PSR12 src",
        "test": "XDEBUG_MODE=coverage phpunit",
        "coverage": "XDEBUG_MODE=coverage phpunit --coverage-text",
        "coverage:html": "XDEBUG_MODE=coverage phpunit --coverage-html coverage-output"
    }
}
